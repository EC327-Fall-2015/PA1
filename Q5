#include <iostream>
#include <stdlib.h>
#include <stdio.h>
#include <time.h>
using namespace std;

int main() {

	int secret, guess1, guess2,diff ;

	//Generate random integer
	srand(time(NULL));
	secret = rand() % 400;
	
		//Ask for first guess
		cout << "Enter your first guess: ";
	cin >> guess1;
	
	//If guess1 is correct
	if (guess1 == secret)
		cout << "Correct! The number is " << secret;

	//Enter Second Guess
	
	do{
		cout << "Enter next guess: " << endl;
		cin >> guess2;
		diff = secret - guess1;
			
			if (abs(guess1 - guess2) > diff)
			{
				cout << "Colder" << endl;
				diff = abs(guess1 - guess2);
				guess1 = guess2;
			}
		if (abs(guess1 - guess2) == diff)
		{
			cout << "Equal";
			diff = abs(guess1 - guess2);
			guess1 = guess2;
		}
		if (abs(guess1 - guess2) < diff)
		{
			cout << "Warmer";
			diff = abs(guess1 - guess2);
			guess1 = guess2;
		}
	} while (guess2 != secret);
		//Looping back causes diff value to reset back to (secret-guess1)
		//Need to find a way to change the value within that loop to new value.
			

}
