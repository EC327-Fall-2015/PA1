#include <iostream>
#include <stdlib.h>
#include <stdio.h>
#include <time.h>
#include <math.h>
using namespace std;

int main() {

	int secret, guess1, guess2;

	//Generate random integer
	srand(time(NULL));
	secret = rand() % 400;
	
		//Ask for first guess
		cout << "Enter your first guess: ";
	cin >> guess1;
	
	//If guess1 is correct
	if (guess1 == secret)
	{
		cout << "Correct! The number is " << secret;
	}
	//Enter Second Guess
	
	do{
		cout << "Enter next guess: ";
		cin >> guess2;
			
		if (abs(secret - guess2) > abs(secret-guess1))
		{
				cout << "Colder" << endl;
				guess1 = guess2;
		}
		if (abs(secret - guess2) == abs(secret - guess1))
		{
			cout << "Equal"<<endl;
			guess1 = guess2;
		}
		if (abs(secret - guess2) < abs(secret - guess1))
		{
			cout << "Warmer"<<endl;
			guess1 = guess2;
		}
	} while (guess2 != secret);

	cout << "Correct! The number was " << secret << "!" << endl;
		

}
